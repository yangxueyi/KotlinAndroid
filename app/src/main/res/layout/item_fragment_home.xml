<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#11000000"
    android:layout_margin="@dimen/dp_10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_home_item_head"
        android:layout_width="@dimen/image"
        android:layout_height="@dimen/image"
        app:srcCompat="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/tv_home_item_writerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        tools:text="作者"
        />

        <TextView
            android:id="@+id/tv_home_item_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/dp_6"
            android:gravity="center"
            tools:text="1小时前"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_home_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        android:textSize="19sp"
        android:textColor="@color/black"
        tools:text="标题"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/dp_4">

        <TextView
            android:id="@+id/tv_home_item_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="15sp"
            tools:text="类型"
            />
        <ImageView
            android:id="@+id/iv_home_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_6"
            app:srcCompat="@drawable/ic_action_no_like"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>


</LinearLayout>