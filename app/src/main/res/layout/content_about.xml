<?xml version="1.0" encoding="utf-8"?>
<!--嵌套滑动视图-->
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xueyi.yang.kotlinandroid.module.about.AboutActivity"
    tools:showIn="@layout/activity_about">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_about_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/ic_launcher_round"
            android:layout_gravity="center_horizontal"
            tools:ignore="ContentDescription"
            />

        <TextView
            android:id="@+id/tv_about_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            tools:text="@string/app_name"
            />

        <TextView
            android:id="@+id/tv_about_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/text_margin"
            tools:text="@string/about_content"
            />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>