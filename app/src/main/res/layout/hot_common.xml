<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/tv_my_bookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/list_item_background"
        android:padding="@dimen/dp_10"
        android:text="@string/my_bookmark"
        android:visibility="gone"/>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/tag_flow_my_bookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:visibility="gone"
        zhy:max_select="0"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/list_item_background"
        android:padding="@dimen/dp_10"
        android:text="@string/hot_key"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/tag_flow_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        zhy:max_select="0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/list_item_background"
        android:padding="@dimen/dp_10"
        android:text="@string/common_use"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/tag_flow_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        zhy:max_select="0" />


</LinearLayout>